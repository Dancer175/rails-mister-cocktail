<div class="banner">
  <div><h1>drink Drink DRINK</h1></div>
  <div class="button">
    <%= link_to "Create Cocktail", new_cocktail_path, class: 'banner-btn' %>
  </div>
</div>
<%= image_tag ("Drink.jpg"), alt: "Empty Glasses", width: '100%', class: "banner-image" %>
<br>
<div class="cocktail-cards">
  <ul>
    <% @cocktails.each do |cocktail| %>
      <div class="cocktail-card">
        <li><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %><%= link_to "Delete", cocktail_path(cocktail),
        method: :delete,
        data: { confirm: "Are you sure?"} %>
        </li>
      </div>
    <% end %>
  </ul>
</div>

