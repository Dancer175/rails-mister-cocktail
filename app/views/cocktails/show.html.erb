<div class="create-container">
  <h2><%= @cocktail.name %></h2>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill, class: "show-image" %>
  <ul>
    <% @doses.each do |dose| %>
      <span class="dose"><%= dose.description %> <%= dose.ingredient.name %></span>
      <%= link_to dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?"}, class: "dose-delete" do %>
          <i class="fas fa-trash"></i>
        <% end %>
    <% end %>
  </ul>
    <%= link_to "add Ingredient", new_cocktail_doses_path(@cocktail), class: "home-button" %>
    <%= link_to "back to HOME", root_path, class: "home-button" %>
</div>


