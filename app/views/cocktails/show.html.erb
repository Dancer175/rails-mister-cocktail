<h2><%= @cocktail.name %> </h2>
<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.description%><%= dose.ingredient.name%><%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<div class="button">
  <%= link_to "add Ingredient", new_cocktail_doses_path(@cocktail) %>
</div>
<div class="button">
  <%= link_to "back to HOME", root_path %>
</div>
