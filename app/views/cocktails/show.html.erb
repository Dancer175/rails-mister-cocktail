<div class="create-container">
  <h2><%= @cocktail.name %> </h2>
  <ul>
    <% @doses.each do |dose| %>
      <%= dose.description%> <%= dose.ingredient.name%><%= link_to dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?"}, class: "dose-delete" do %>
          <i class="fas fa-trash"></i>
        <% end %>
    <% end %>
  </ul>
  <div class="add-button">
    <%= link_to "add Ingredient", new_cocktail_doses_path(@cocktail) %>
  </div>
  <div class="home-button">
    <%= link_to "back to HOME", root_path %>
  </div>
</div>


